<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "#f5ff96" >
    
    <TextView android:id = "@+id/quizNumber"
        android:layout_height = "wrap_content"
        android:layout_width = "40sp"
        android:layout_alignParentLeft = "true"
        android:text = "1"
        android:textSize = "45sp" />
            
    <TextView android:id = "@+id/correct"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:layout_toRightOf = "@id/quizNumber"
        android:layout_alignTop = "@id/quizNumber"
        android:layout_marginLeft = "15sp"
        android:text = "Correct: "
        android:textSize = "15sp"
        android:textColor = "#000" />
    
    <TextView android:id = "@+id/numCorrect"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:layout_toRightOf = "@id/correct"
        android:layout_alignTop = "@id/correct"
        android:textSize = "15sp"
        android:textColor = "#000" />
    
    <TextView android:id = "@+id/attempts"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:layout_toRightOf = "@id/quizNumber"
        android:layout_below = "@id/correct"
        android:layout_marginLeft = "15sp"
        android:text = "Attempts: " 
        android:textSize = "15sp"
        android:textColor = "#000" />
    
     <TextView android:id = "@+id/numAtts"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:layout_toRightOf = "@id/attempts"
        android:layout_alignTop = "@id/attempts"
        android:textSize = "15sp"
        android:textColor = "#000" />
    
    <TextView android:id = "@+id/grade"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:layout_toRightOf = "@id/quizNumber"
        android:layout_below = "@id/attempts"
        android:layout_marginLeft = "15sp"
        android:text = "Grade: "
        android:textSize = "15sp"
        android:textColor = "#000" />
    
     <TextView android:id = "@+id/gradePct"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:layout_toRightOf = "@id/grade"
        android:layout_alignTop = "@id/grade"
        android:textSize = "15sp"
        android:textColor = "#000" />

</RelativeLayout>